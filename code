               /* else if((choice>='a' && choice<='z')||(choice>='A' && choice<='Z'))
            cout<<"\n\n\t\t\tENTER PROPER INPUT \n";
            else
            cout<<"\n\n\t\t\tENTER PROPER INPUT \n";*/
    }while(choice!=0);
cout<<"\t\t\tYOU EXITED !!! \n";
